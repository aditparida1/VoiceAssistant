<Window x:Class="Voicerecognition.YesNoRestart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Are You Sure" Height="118" Width="327" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="yesBtn" Content="Yes" HorizontalAlignment="Left" Margin="28,33,0,0" VerticalAlignment="Top" Width="75" Click="yesBtn_Click"/>
        <Button x:Name="noBtn" Content="No" HorizontalAlignment="Left" Margin="216,33,0,0" VerticalAlignment="Top" Width="75" Click="noBtn_Click"/>

    </Grid>
</Window>
